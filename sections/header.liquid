{%- if request.design_mode -%}
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      if (window.headerEventHandlersAttached) return;
      window.headerEventHandlersAttached = true;

      function handleHoverDisclosureEvent(event) {
        const target = event.target;
        const hoverDisclosure = target.closest('hover-disclosure');
        if (!hoverDisclosure) return;
        const key = hoverDisclosure.getAttribute('aria-controls');
        const disclosure = document.getElementById(key);
        if (!disclosure.contains(target)) return;
        const isTouch = matchMedia('(pointer:coarse)').matches;
        const viewportMobile = window.innerWidth < theme.sizes.small;
        const headerComponent = hoverDisclosure.closest('header-component');
        const isCompressed = headerComponent.classList.contains('site-header--compress');
        // Only show disclosure for desktop and non-mobile nav
        const shouldShowDisclosure = !isTouch && !viewportMobile && !isCompressed;
        const mode = Boolean(event.type === 'shopify:block:deselect') ? 'close' : 'open';

        if (mode === 'open' && shouldShowDisclosure) {
          if (typeof hoverDisclosure.showDisclosure === 'function') hoverDisclosure.showDisclosure();
        } else if (mode === 'close') {
          if (typeof hoverDisclosure.hideDisclosure === 'function') hoverDisclosure.hideDisclosure();
        }
      }

      document.addEventListener('shopify:block:select', (event) => handleHoverDisclosureEvent(event));
      document.addEventListener('shopify:block:deselect', (event) => handleHoverDisclosureEvent(event));
    });
  </script>
{%- endif -%}

