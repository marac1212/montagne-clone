    {%- endif -%}

    {%- if settings.show_header_search -%}
      {%- render 'search-popdown',
        unique: 'desktop',
        in_header: true,
        classes: 'menu__item menu__item--icon',
        summary_classes: summary_classes,
        header_icons_as_text: header_icons_as_text,
        link_hover_effect: link_hover_effect
