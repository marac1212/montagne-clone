  assign highlight_item_text_color = section.settings.highlight_item_text_color
  assign enable_custom_badge = section.settings.enable_custom_badge
  assign secondary_menu = section.settings.main_menu_secondary
  assign summary_classes = 'navlink navlink--icon'
  assign link_hover_effect = section.settings.link_hover_effect
  assign highlight_color = section.settings.highlight_color
  assign highlight_text_color = section.settings.highlight_text_color
  assign link_hover_effect_class = 'navlink--' | append: link_hover_effect

  if link_hover_effect == 'highlight'
    assign link_hover_effect_class = link_hover_effect_class | append: '-text'
  endif

  if header_icons_as_text
    assign summary_classes = summary_classes | append: ' ' | append: link_hover_effect_class
  endif

  capture style
    if highlight_item_color.alpha != 0.0 and highlight_item_color != ''
      echo '--highlight: ' | append: highlight_item_color | append: ';'

      if enable_custom_badge
        assign custom_badge_bg_brightness = highlight_item_color | color_brightness | round
        echo '--custom-badge-bg-color: ' | append: highlight_item_color | append: ';'
      endif
    endif

    if enable_custom_badge and highlight_item_text_color.alpha != 0.0 and highlight_item_text_color != ''
      echo '--custom-badge-text-color: ' | append: highlight_item_text_color | append: ';'
    endif

    if highlight_color != 'rgba(0,0,0,0)' and highlight_color != ''
      echo '--highlight-color: ' | append: highlight_color | append: ';'
    endif

    if highlight_text_color != 'rgba(0,0,0,0)' and highlight_text_color != ''
      echo '--highlight-text-color: ' | append: highlight_text_color | append: ';'
    endif
  endcapture

  capture cart_icon
    case settings.cart_icon
      when 'bag'
        render 'icon-shopping-bag'
      when 'shopping_cart'
        render 'icon-shopping-cart'
    endcase
  endcapture

  assign show_locale_selector = section.settings.show_locale_selector
  assign show_locale_code = section.settings.show_locale_code
  assign show_country_selector = section.settings.show_country_selector
  assign show_country_name = section.settings.show_country_name
  assign show_country_flag = section.settings.show_country_flag
-%}

