      {%- liquid
        assign link_title = 'layout.cart.title' | t
        assign title_string = 'general.accessibility.open_cart' | t
        assign link_classes = 'navlink navlink--icon cart__toggle ' | append: link_hover_effect_class

        if cart.item_count > 0
          assign link_classes = link_classes | append: ' cart__toggle--has-items'
        endif

        if cart_animation
          assign link_classes = link_classes | append: ' cart__toggle--animation'
        endif

        if settings.nav_caps_toplevel
          assign link_classes = link_classes | append: ' caps'
        endif

        capture link_attributes
          echo ' class="' | append: link_classes | append: '" aria-controls="cart-drawer" aria-expanded="false"'

          unless template.name == 'cart' or settings.cart_type == 'page'
            echo ' data-cart-drawer-toggle'
          endunless
        endcapture

        capture icon_markup
          unless header_icons_as_text
            echo cart_icon
          endunless

          echo '<span class="visually-hidden">' | append: title_string | append: '</span>'
        endcapture
      -%}

      {%- render 'link-with-highlights',
        link_url: routes.cart_url,
        link_title: link_title,
        link_hover_effect: link_hover_effect,
        link_attributes: link_attributes,
        icon_markup: icon_markup,
        is_text: header_icons_as_text
      -%}
    </div>
  </div>
</nav>

