      {%- assign logo_height = logo_width | divided_by: logo.aspect_ratio -%}
      {{ logo | image_url: width: 500 | image_tag:
        widths: widths,
        height: logo_height,
        width: logo_width,
        alt: image_alt,
        sizes: sizes,
        class: 'logo__image',
        loading: 'eager',
        fetchpriority: 'high',
