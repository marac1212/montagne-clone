    {%- endif -%}

    {%- if shop.customer_accounts_enabled -%}
      <div class="menu__item menu__item--icon">
        {%- liquid
          assign link_title = 'layout.customer.account' | t
          assign title_string = 'general.accessibility.my_account' | t
          assign link_classes = 'navlink navlink--icon ' | append: link_hover_effect_class

          if settings.nav_caps_toplevel
            assign link_classes = link_classes | append: ' caps'
          endif

          capture link_attributes
            echo ' class="' | append: link_classes | append: '"'
          endcapture

          capture icon_markup
            unless header_icons_as_text
              render 'icon-user'
            endunless

            echo '<span class="visually-hidden">' | append: title_string | append: '</span>'
          endcapture
        -%}

        {%- render 'link-with-highlights',
          link_url: routes.account_url,
          link_title: link_title,
          link_hover_effect: link_hover_effect,
          link_attributes: link_attributes,
          is_text: header_icons_as_text,
          icon_markup: icon_markup
